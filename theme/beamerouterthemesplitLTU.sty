\def\insertframetitle{}

\mode<presentation>
\setbeamertemplate{frametitle}

\setbeamercolor{section in head/foot}{parent=palette primary}
\setbeamercolor{subsection in head/foot}{parent=palette quaternary}

\setbeamercolor{author in head}{parent=palette quaternary}
\setbeamercolor{title in head}{parent=palette primary}

\setbeamercolor{author in foot}{parent=palette quaternary}
\setbeamercolor{title in foot}{parent=palette primary}

\usesectionheadtemplate
  {\hfill\insertsectionhead}
  {\hfill\color{fg!50!bg}\insertsectionhead}
  
% Head
\defbeamertemplate*{headline}{split theme}
{%
  \leavevmode%
  \@tempdimb=2.4375ex%
  \ifnum\beamer@subsectionmax<\beamer@sectionmax%
    \multiply\@tempdimb by\beamer@sectionmax%
  \else%
    \multiply\@tempdimb by\beamer@subsectionmax%
  \fi%
  \ifdim\@tempdimb>0pt%
    \advance\@tempdimb by 1.825ex%
    \begin{beamercolorbox}[wd=.6\paperwidth,ht=\@tempdimb]{title in head}%
      \vbox to\@tempdimb{\vfil \hspace{.3cm} \Large \insertframetitle \vfil}%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.2\paperwidth,ht=\@tempdimb]{section in head/foot}%
      \vbox to\@tempdimb{\vfil\insertsectionnavigation{.2\paperwidth}\vfil}%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.85\paperwidth,ht=\@tempdimb]{subsection in head/foot}%
      \vbox to\@tempdimb{\vfil\insertsubsectionnavigation{.85\paperwidth}\vfil}%
    \end{beamercolorbox}%
  \fi%
}

\defbeamertemplate*{footline}{split theme}
{%
  \leavevmode%
  \hbox{\begin{beamercolorbox}[wd=.5\paperwidth,ht=2.5ex,dp=1.125ex,leftskip=.3cm plus1fill,rightskip=.3cm]{author in foot}%
    \usebeamerfont{author in foot}\insertshortauthor
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.5ex,dp=1.125ex,leftskip=.3cm,rightskip=.3cm plus1fil]{title in foot}%
    \usebeamerfont{title in foot}\insertshorttitle\hfill \insertframenumber/\ref{slide:questions} \usebeamerfont{page number in head/foot}\usebeamertemplate{page number in head/foot}
  \end{beamercolorbox}}%
  \vskip0pt%
}


\mode
<all>
