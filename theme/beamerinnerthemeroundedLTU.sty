\DeclareOptionBeamer{shadow}[false]{\def\beamer@themerounded@shadow{#1}}
\ExecuteOptionsBeamer{shadow=false}
\ProcessOptionsBeamer

\mode<presentation>

\setbeamertemplate{blocks}[rounded][shadow=\beamer@themerounded@shadow]
%\setbeamerfont{caption}{series=\normalfont,size=\fontsize{8}{8}}
\setbeamertemplate{sections/subsections in toc}[circle]
\setbeamertemplate{subsection in toc}{\leavevmode\leftskip=1em \textcolor{LTUblue}{\textbullet} \hspace{.1em}\inserttocsubsection\par}

\setbeamertemplate{itemize item}[circle]
\setbeamertemplate{itemize subitem}{--}

